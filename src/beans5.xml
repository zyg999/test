<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="steelAxe" class="app.service.impl.SteelAxe"/>
    <bean id="chinese2" class="app.service.impl.Chinese2"
          init-method="init" p:axe-ref="steelAxe" p:name="依赖注入的值"/>
<!--    配置Bean后处理器，可以无需指定id属性-->
    <bean class="app.service.impl.MyBeanPostProcessor"/>

</beans>